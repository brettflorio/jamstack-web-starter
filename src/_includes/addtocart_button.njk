<a 
  href="{{ site.foxy_cart_url }}?name={{ product.name }}&price={{ product.price }}&quantity=1"
  target="giof-cart"
  data-foxy-product-link
  class="block no-underline text-center w-full shadow bg-{{ addToCartBtn.color }} hover:bg-dark focus:shadow-outline focus:outline-none text-white text-xs px-1 rounded mb-2"
>
  <strong>{{ addToCartBtn.text }}</strong> ({{ addToCartBtn.currency }}{{
    addToCartBtn.price }})
</a>
